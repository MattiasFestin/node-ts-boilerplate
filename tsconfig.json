{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "strictNullChecks": true,
        "outDir": "./build",
        "watch": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "coverage",
        "build"
    ]
}
